<idea-plugin package="com.jetbrains.edu" xmlns:xi="http://www.w3.org/2001/XInclude" allow-bundled-update="true">
  <id>com.jetbrains.edu</id>
  <name>EduTools</name>
  <vendor>JetBrains</vendor>

  <xi:include href="/META-INF/educational-core.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/edu-code-insight.xml" xpointer="xpointer(/idea-plugin/*)"/>

  <!--update description in description.html file instead-->
  <!--suppress PluginXmlValidity -->
  <description/>

  <!--update changes in changes.html file instead-->
  <change-notes/>

  <!--suppress PluginXmlValidity -->
  <content>
    <module name="edu-html"/>
    <module name="edu-markdown"/>
    <module name="edu-yaml"/>
    <module name="jvm-core"/>
    <module name="Edu-Java"/>
    <module name="Edu-Kotlin"/>
    <module name="Edu-Scala"/>
    <module name="Edu-Android"/>
    <!-- Two python modules provide the same integration
     and only needed to fix https://youtrack.jetbrains.com/issue/EDU-4512
     caused by https://youtrack.jetbrains.com/issue/IDEA-292661 -->
    <module name="Edu-Python-Community"/>
    <module name="Edu-Python-Pro"/>
    <module name="Edu-JavaScript"/>
    <module name="Edu-Rust"/>
    <module name="Edu-Cpp"/>
    <module name="Edu-Go"/>
    <module name="Edu-Php"/>
    <module name="sql-core"/>
    <module name="sql-jvm"/>
    <module name="Edu-Sql-Java"/>
    <module name="Edu-Sql-Kotlin"/>
    <module name="Edu-GitHub"/>
    <module name="remote-env"/>
  </content>
</idea-plugin>
