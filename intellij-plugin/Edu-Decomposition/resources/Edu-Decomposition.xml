<idea-plugin package="com.jetbrains.edu.decomposition">
  <!--suppress PluginXmlValidity -->
  <dependencies>
    <plugin id="org.jetbrains.plugins.gradle"/>
    <plugin id="JUnit"/>
  </dependencies>

  <actions>
      <action id="Educational.Check.Completeness" class="com.jetbrains.edu.decomposition.actions.CheckCompletenessAction"/>
  </actions>

  <extensionPoints>
      <extensionPoint qualifiedName="Educational.functionParser"
                      beanClass="com.intellij.lang.LanguageExtensionPoint"
                      dynamic="true">
        <with attribute="implementationClass" implements="com.jetbrains.edu.decomposition.parsers.FunctionParser"/>
      </extensionPoint>

    <extensionPoint qualifiedName="Educational.functionDependenciesParser"
                    beanClass="com.intellij.lang.LanguageExtensionPoint"
                    dynamic="true">
      <with attribute="implementationClass" implements="com.jetbrains.edu.decomposition.parsers.FunctionDependenciesParser"/>
    </extensionPoint>

    <extensionPoint qualifiedName="Educational.granularityFeedbackProvider"
                    beanClass="com.intellij.lang.LanguageExtensionPoint"
                    dynamic="true">
      <with attribute="implementationClass" implements="com.jetbrains.edu.decomposition.feedback.GranularityFeedbackProvider"/>
    </extensionPoint>
  </extensionPoints>

  <resource-bundle>messages.EduDecompositionBundle</resource-bundle>
</idea-plugin>