<!--suppress PluginXmlValidity -->
<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceInterface="com.jetbrains.edu.learning.marketplace.courseStorage.api.CourseStorageConnector"
                        serviceImplementation="com.jetbrains.edu.learning.marketplace.courseStorage.api.CourseStorageConnectorImpl"
                        testServiceImplementation="com.jetbrains.edu.learning.marketplace.courseStorage.MockCourseStorageConnector"/>
    <experimentalFeature id="edu.course.creator.storage" internal="true" percentOfUsers="100">
      <description>Enables upload of courses to course storage</description>
    </experimentalFeature>
  </extensions>
  <actions>
    <action id="Educational.ImportCourseFromStorageAction" class="com.jetbrains.edu.learning.marketplace.courseStorage.course.ImportCourseFromStorageAction" internal="true"/>
    <action id="Educational.Student.CourseStorageChangeHost"
            class="com.jetbrains.edu.learning.marketplace.courseStorage.changeHost.CourseStorageChangeHostAction"
            internal="true"/>
    <action id="Educational.Educator.CourseStoragePushCourse"
            class="com.jetbrains.edu.coursecreator.actions.marketplace.courseStorage.CourseStoragePushCourse"
            internal="true">
      <add-to-group group-id="Educational.Educator.CourseCreator.Menu" relative-to-action="Educational.Educator.MarketplacePushCourse" anchor="after"/>
    </action>
  </actions>
</idea-plugin>