<idea-plugin package="com.jetbrains.edu.assistant.validation">
  <actions>
    <action id="Validation.CodeHintValidation"
            class="com.jetbrains.edu.assistant.validation.actions.next.step.hint.code.CodeHintValidationAction">
      <add-to-group group-id="ToolsMenu"/>
    </action>
    <action id="Validation.SequentialCodeHintValidation"
            class="com.jetbrains.edu.assistant.validation.actions.next.step.hint.code.sequential.SequentialCodeHintValidationAction">
      <add-to-group group-id="ToolsMenu"/>
    </action>
    <action id="Validation.SequentialCodeWithCompilationErrorsValidation"
            class="com.jetbrains.edu.assistant.validation.actions.next.step.hint.code.sequential.SequentialCodeWithCompilationErrorsValidationAction">
      <add-to-group group-id="ToolsMenu"/>
    </action>
    <action id="Validation.AutoHintValidation"
            class="com.jetbrains.edu.assistant.validation.actions.next.step.hint.AutoHintValidationAction">
      <add-to-group group-id="ToolsMenu"/>
    </action>
    <action id="Validation.AutoCompilationErrorHintValidation"
            class="com.jetbrains.edu.assistant.validation.actions.next.step.hint.AutoCompilationErrorHintValidationAction">
      <add-to-group group-id="ToolsMenu"/>
    </action>
  </actions>
  <resource-bundle>messages.AiAssistantValidationBundle</resource-bundle>
</idea-plugin>