<idea-plugin package="com.jetbrains.edu.aiDebugging.java">
  <dependencies>
    <!--suppress PluginXmlValidity -->
    <module name="ai-debugging-core"/>
    <plugin id="com.intellij.modules.java"/>
  </dependencies>

  <extensions defaultExtensionNs="aiDebugging">
    <breakpointTypeManager language="JAVA" implementationClass="com.jetbrains.edu.aiDebugging.java.JBreakpointTypeManager"/>
    <breakpointTypeManager language="kotlin" implementationClass="com.jetbrains.edu.aiDebugging.java.JBreakpointTypeManager"/>
    <breakpointTypeManager language="Scala" implementationClass="com.jetbrains.edu.aiDebugging.java.JBreakpointTypeManager"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <xdebugger.breakpointType implementation="com.jetbrains.edu.aiDebugging.java.JAIDebuggerBreakpointType"/>
    <debugger.javaBreakpointHandlerFactory implementation="com.jetbrains.edu.aiDebugging.java.JAIDebuggerBreakpointHandlerFactory"/>
  </extensions>
</idea-plugin>