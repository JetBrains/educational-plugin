<idea-plugin package="com.jetbrains.edu.ai.clippy.assistant">
  <resource-bundle>messages.EduAIClippyAssistantBundle</resource-bundle>

  <dependencies>
    <!--suppress PluginXmlValidity -->
    <module name="AI"/>
  </dependencies>

  <actions>
    <action id="Educational.Student.ShowClippyAssistant"
            class="com.jetbrains.edu.ai.clippy.assistant.action.ShowClippyAssistant"
            internal="true"/>
    <action id="Educational.Student.ShowDiffClippyComments"
            class="com.jetbrains.edu.ai.clippy.assistant.action.ShowDiffClippyComments"/>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="com.jetbrains.edu.ai.clippy.assistant.settings.AIClippySettings"/>
  </extensions>

  <extensions defaultExtensionNs="Educational">
    <AIOptionsProvider instance="com.jetbrains.edu.ai.clippy.assistant.settings.EduAIClippyOptions"/>
    <checkListener implementation="com.jetbrains.edu.ai.clippy.assistant.listener.AIClippyCheckListener"/>
  </extensions>
</idea-plugin>