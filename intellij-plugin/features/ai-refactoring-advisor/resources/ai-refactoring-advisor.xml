<idea-plugin package="com.jetbrains.edu.ai.refactoring.advisor">
  <resource-bundle>messages.EduAIRefactoringAdvisorBundle</resource-bundle>

  <dependencies>
    <!--suppress PluginXmlValidity -->
    <module name="ai-clippy-assistant"/>
    <module name="ai-learner-feedback"/>
  </dependencies>

  <actions>
    <action id="Educational.Student.ShowAIRefactoringAdvise"
            class="com.jetbrains.edu.ai.refactoring.advisor.action.ShowAIRefactoringAdvise"/>
  </actions>

  <extensions defaultExtensionNs="Educational">
    <checkListener implementation="com.jetbrains.edu.ai.refactoring.advisor.listener.AILearnerRefactoringAdvisorListener"/>
  </extensions>
</idea-plugin>