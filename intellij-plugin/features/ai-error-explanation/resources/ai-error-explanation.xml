<idea-plugin package="com.jetbrains.edu.ai.error.explanation">
  <resource-bundle>messages.EduAIErrorExplanationBundle</resource-bundle>

  <dependencies>
    <!--suppress PluginXmlValidity -->
    <module name="ai-clippy-assistant"/>
  </dependencies>

  <actions>
    <action id="Educational.Student.ShowErrorExplanation"
            class="com.jetbrains.edu.ai.error.explanation.action.ShowErrorExplanation"
            internal="true"/>
  </actions>

  <extensionPoints>
    <extensionPoint qualifiedName="Educational.errorAnalyzer"
                    beanClass="com.intellij.lang.LanguageExtensionPoint"
                    dynamic="true">
      <with attribute="implementationClass" implements="com.jetbrains.edu.ai.error.explanation.ErrorAnalyzer"/>
    </extensionPoint>
  </extensionPoints>

  <extensions defaultExtensionNs="com.intellij">
    <postStartupActivity implementation="com.jetbrains.edu.ai.error.explanation.ErrorExplanationStartupActivity"/>
  </extensions>
</idea-plugin>