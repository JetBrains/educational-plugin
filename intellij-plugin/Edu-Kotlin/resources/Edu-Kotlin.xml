<idea-plugin package="com.jetbrains.edu.kotlin">
  <!--suppress PluginXmlValidity -->
  <dependencies>
    <!--suppress PluginXmlValidity -->
    <module name="jvm-core"/>
    <module name="Edu-Cognifire"/>

    <plugin id="org.jetbrains.kotlin"/>
    <plugin id="org.jetbrains.plugins.gradle"/>
    <plugin id="JUnit"/>
  </dependencies>

  <extensions defaultExtensionNs="Educational">
    <configurator implementationClass="com.jetbrains.edu.kotlin.KtConfigurator" language="kotlin"/>
    <xPluginConfigurator implementation="com.jetbrains.edu.kotlin.x.KtXConfigurator"/>
    <mainFileProvider language="kotlin" implementationClass="com.jetbrains.edu.kotlin.KtMainFileProvider"/>

    <!-- Hyperskill -->
    <configurator implementationClass="com.jetbrains.edu.kotlin.hyperskill.KtHyperskillConfigurator" language="kotlin" courseType="Hyperskill"/>

    <promptExpressionParser language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.psi.KtPromptExpressionParser"/>
    <codeExpressionWriter language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.psi.KtCodeExpressionWriter"/>
    <cognifireDslPackageCallChecker language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.psi.KtCognifireDslPackageCallChecker"/>
    <codeApplier language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.psi.KtCodeApplier"/>
    <generatedCodeParser language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.psi.KtGeneratedCodeParser"/>
    <inspectionProcessor language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.inspection.KtInspectionProcessor"/>
    <codeExpressionParser language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.psi.KtCodeExpressionParser"/>
    <promptExpressionWriter language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.psi.KtPromptExpressionWriter"/>
    <prodeExpressionParser language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.psi.KtProdeExpressionParser"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <runLineMarkerContributor language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.PromptRunLineMarkerContributor"/>
    <completion.confidence language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.completion.CognifireCompletionConfidence" id="kotlinStrings" order="first"/>
    <completion.contributor language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.completion.CognifireCompletionContributor"/>
    <annotator language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.psi.KtPromptErrorAnnotator"/>
    <annotator language="kotlin" implementationClass="com.jetbrains.edu.kotlin.cognifire.psi.KtPromptSyntaxHighlightingAnnotator"/>
  </extensions>
</idea-plugin>
